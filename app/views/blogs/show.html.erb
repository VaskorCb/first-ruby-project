<p style="color: green"><%= notice %></p>

<%= render @blog %>

<div class="mt-3">
  <%= link_to "Edit this blog", edit_blog_path(@blog) ,class:"text-white text-decoration-none  bg-info px-4 py-2" %> |
  <%= link_to "Back to blogs", blogs_path, class:"text-white text-decoration-none px-4 py-2 bg-primary" %> | 

  <%= link_to "Destroy this blog", @blog, class:"text-white text-decoration-none  bg-danger px-4 py-2", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
</div>
